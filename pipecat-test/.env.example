# Cloud services (default)
DEEPGRAM_API_KEY=your_deepgram_api_key
CARTESIA_API_KEY=your_cartesia_api_key

# Local services - set to "true" to enable
USE_LOCAL_STT=false
USE_LOCAL_TTS=false

# Parakeet STT config (when USE_LOCAL_STT=true)
STT_MODEL=nemo-parakeet-tdt-0.6b-v3
STT_DEVICE=cpu  # or "cuda" for GPU

# Chatterbox TTS config (when USE_LOCAL_TTS=true)
CHATTERBOX_URL=http://localhost:5000
TTS_VOICE=default
TTS_EXAGGERATION=0.5

# Ollama LLM
OLLAMA_MODEL=qwen3:4b
