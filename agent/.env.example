# Voice Agent Configuration
# =========================
# Copy to .env and update values

# STT (NVIDIA Parakeet via NVCF)
# Get your API key from: https://build.nvidia.com
NVIDIA_API_KEY=your_nvidia_api_key_here
NVIDIA_SERVER=grpc.nvcf.nvidia.com:443

# TTS (Chatterbox)
CHATTERBOX_URL=http://localhost:5000
TTS_VOICE=default

# LLM (Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen3:8b
OLLAMA_TEMPERATURE=0.7
OLLAMA_NUM_CTX=8192

# n8n MCP (optional)
# N8N_MCP_URL=http://localhost:5678/mcp-server/http
# N8N_MCP_TOKEN=your_token_here

# Picovoice wake word (optional)
# PORCUPINE_ACCESS_KEY=your_key_here

# Server ports
WEBRTC_PORT=8765
WEBHOOK_PORT=8889
